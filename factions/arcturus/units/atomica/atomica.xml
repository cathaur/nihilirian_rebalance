<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="850" regeneration="2"/>
		<max-ep value="120" regeneration="4"/>
		<armor value="2"/>
		<armor-type value="toughskin"/>					
		<sight value="14"/>
		<time value="150"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements>

<resource name="gold" amount="160"/>
<resource name="wood" amount="150"/>
<resource name="stone" amount="110"/>
<resource name="souls" amount="4"/>
		
		</resource-requirements>
		<resources-stored/>
		<image path="images/head.bmp"/>
		<image-cancel path="../laton/icons/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/select1.wav"/>
			<sound path="sounds/select2.wav"/>				
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/act1.wav"/>
			<sound path="sounds/act2.wav"/>
			<sound path="sounds/act3.wav"/>
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="155"/>
			<animation path="models/atomica_still.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		 
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="400"/>
			<anim-speed value="230"/>
			<animation path="models/atomica_walk.g3d"/>
			<sound enabled="false"/>
		</skill>
  
		
				<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="4"/>
			<speed value="350"/>
			<anim-speed value="150"/>
			<animation path="models/atomica_attack.g3d"/>
			<sound enabled="true" start-time="0.3">
				<sound-file path="/sounds/shoot1.wav"/>
				<sound-file path="/sounds/shoot2.wav"/>
				
			</sound>
		        <attack-strenght value="85"/>
			<attack-var value="10"/>
			<attack-range value="12"/>
			<attack-type value="explosions"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/blow.wav"/>
				
				</sound>
			</projectile>
			<splash value="true">
				<radius value="2"/>
			 	<damage-all value="false"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>
		
	 
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="30"/>
			<anim-speed value="10"/>
			<animation path="models/atomica_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/die1.wav"/>
				<sound-file path="sounds/die2.wav"/>							
			</sound>			
			<fade value="false"/>
		</skill>						

	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../laton/icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../laton/icons/walk.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		 		
		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../laton/icons/attack_ballistic.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../laton/icons/hold.bmp"/>
			<unit-requirements/>
		<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

	</commands>
</unit>